<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<smil>
	<head>
		<meta name="title" content="Simple SMIL for testing media in body" />
		<layout>
			<root-layout id="display:0" width="1920" height="1080" />
			<region regionName="screen1" top="0" left="0" width="100%" height="100%" z-index="1" backgroundColor="#f00" />

		</layout>
	</head>
	<body>
	<!--
		All media have 70s => 1min + 10s min
	
	-->
			<par xml:id="par1" repeatCount="indefinite">
                <img region="screen1" xml:id="img1" src="../../images/0001.jpg" dur="10s" begin="wallclock(R/2021-04-01T00:00:00/PT1M10S)" />
				<img region="screen1" xml:id="img2" src="../../images/0002.jpg" dur="10s" begin="wallclock(R/2021-04-01T00:00:10/PT1M10S)" />
				<img region="screen1" xml:id="img3" src="../../images/0003.jpg" dur="10s" begin="wallclock(R/2021-04-01T00:00:20/PT1M10S)" />
				<img region="screen1" xml:id="img4" src="../../images/0004.jpg" dur="10s" begin="wallclock(R/2021-04-01T00:00:30/PT1M10S)" />
				<img region="screen1" xml:id="img5" src="../../images/0005.jpg" dur="10s" begin="wallclock(R/2021-04-01T00:00:40/PT1M10S)" />
				<img region="screen1" xml:id="img6" src="../../images/0006.jpg" dur="10s" begin="wallclock(R/2021-04-01T00:00:50/PT1M10S)" />
				<img region="screen1" xml:id="img7" src="../../images/0007.jpg" dur="10s" begin="wallclock(R/2021-04-01T00:01:00/PT1M10S)" />
			</par>
		
	</body>
</smil>
